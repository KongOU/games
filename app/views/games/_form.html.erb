<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'All Game', admin_path %></li>
  <li class="active"><%= link_to 'New Game', new_game_path%></li>
</ul>
<div class="row">
<br>
  <div class="col col-md-6 col-md-offset-3">
  <%= form_for(@game, :html => { multipart: true }) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :release_date %>
    <%= f.date_select :release_date,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :iframe %>
    <%= f.text_field :iframe,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :source %>
    <%= f.text_area :source,class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>
    <%= collection_select(:game, :category_id, Category.all, :id, :name, :prompt => true) %>

  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

  </div>
</div>


